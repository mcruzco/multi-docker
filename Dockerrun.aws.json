{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "mcruzcl/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "mcruzcl/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "mcruzcl/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name" : "nginx",
            "image" : "mcruzcl/multi-nginx",
            "essential" : true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links" : ["client","server"]

        }
    ]
}